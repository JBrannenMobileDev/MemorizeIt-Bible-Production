<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".Activities.PhoneUnlockActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/unlock_view_banner_ad"
            android:layout_gravity="center_horizontal">
        </com.google.android.gms.ads.AdView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/title_text"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@color/colorAccent"
            android:elevation="4dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hint"
            android:visibility="visible"
            android:background="@android:color/transparent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:translationZ="5dp"
                android:visibility="visible"
                android:textAlignment="center">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:text="OFF"
                    android:id="@+id/switch_track_off_text"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorCloseButtonTextUnselected"
                    android:textSize="25dp"
                    android:visibility="invisible"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:text="ON"
                    android:id="@+id/switch_track_on_text"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorCloseButtonTextUnselected"
                    android:textSize="25dp"
                    android:visibility="invisible"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <Switch
                android:switchTextAppearance="@style/SwitchTextAppearanceTrue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="MORE VERSES"
                android:id="@+id/moreVersesSwitch"
                android:layout_weight="1"
                android:checked="false"
                android:enabled="true"
                android:background="@color/colorAccent"
                android:translationZ="4dp"
                android:clickable="true"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textOff="OFF"
                android:textOn="ON"
                android:width="80dp"
                android:switchMinWidth="150dp"
                android:splitTrack="false"
                android:showText="true"
                android:singleLine="false"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:thumbTextPadding="15dp"
                android:textAlignment="center"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close"
                android:id="@+id/close_button"
                android:layout_gravity="bottom"
                android:background="#007298"
                android:textColor="#014860"
                android:textSize="25dp"
                android:visibility="visible"
                android:elevation="4dp"
                android:translationZ="7dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="true"
        android:gravity="bottom"
        android:layout_marginBottom="75dp"
        android:clipToPadding="false"
        android:layout_marginTop="100dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:scrollIndicators="top"
            android:scrollbarThumbVertical="@android:color/white"
            android:scrollbarSize="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/verse_location"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="top"
                    android:keepScreenOn="true"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/verse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:keepScreenOn="true"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAlignment="center"/>

            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/fab_frame"
            android:layout_alignParentEnd="false">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/check_answer_button_fab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/circle_button"
                android:visibility="gone"
                android:translationZ="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CHECK ANSWER"
                android:id="@+id/check_answer_textview"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:translationZ="60dp"
                android:visibility="gone"
                android:layout_marginBottom="25dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/hint_fab_frame"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/fab_frame"
            android:layout_marginBottom="21dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/hint_button_fab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button"
                android:visibility="gone"
                android:translationZ="25dp"
                android:layout_margin="@dimen/fab_margin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HINT"
                android:id="@+id/hint_textview"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorGreenText"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:translationZ="35dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"
            android:gravity="center_horizontal|bottom"
            android:visibility="gone"
            android:id="@+id/verification_layout">

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/yes_fab_frame"
                android:layout_alignParentEnd="false">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/yes_button_fab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fab_margin"
                    android:background="@drawable/circle_button"
                    android:visibility="gone"
                    android:translationZ="50dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="YES"
                    android:id="@+id/yes_textview"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/colorGreenText"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:translationZ="60dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/no_fab_frame"
                android:layout_alignParentEnd="false">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/no_button_fab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fab_margin"
                    android:background="@drawable/circle_button"
                    android:visibility="gone"
                    android:translationZ="50dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NO"
                    android:id="@+id/no_textview"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/colorNoText"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:translationZ="60dp" />
            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
