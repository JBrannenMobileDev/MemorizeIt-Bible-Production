<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_memorized"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/verse_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorCloseButtonTextUnselected"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp" />
            <TextView
                android:id="@+id/verse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorCloseButtonTextUnselected"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp">

                <TextView
                    android:id="@+id/memorized_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date memorized:"
                    android:textColor="@color/colorCloseButtonTextUnselected"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/memorized_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Jan 15, 1988"
                    android:textColor="@color/colorCloseButtonTextUnselected"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:id="@+id/last_seen_layout">

                <TextView
                    android:id="@+id/last_seen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last reviewed:  "
                    android:textColor="@color/colorCloseButtonTextUnselected"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sep 22, 2016"
                    android:id="@+id/last_seen_textview"
                    android:textSize="17dp"
                    android:textColor="@color/colorCloseButtonTextUnselected" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>