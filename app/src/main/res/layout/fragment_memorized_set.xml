<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/memorized_fragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:background="@color/view_by_view_background"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="View By:"
                android:id="@+id/memorized_sort_title"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textAlignment="viewEnd"
                android:paddingRight="15dp"
                android:textColor="@color/view_by_text_color" />

            <Spinner
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:id="@+id/memorized_sort_spinner"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:dropDownSelector="@color/colorCardviewHighlight"
                android:gravity="center" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/memorized_set_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>