<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBg"
    android:orientation="vertical"
    tools:context="nape.biblememory.Activities.SettingsActivity">

    <TextView
        android:id="@+id/settings_bible_version_settings_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="85dp"
        android:background="@color/colorWhite"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Bible version settings"
        android:textColor="@color/bgColor"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="102dp"
        android:backgroundTint="@color/greyBg"
        android:elevation="2dp"
        android:tint="@color/greyBg"
        app:srcCompat="@mipmap/ic_arrow_forward_black_24dp" />

    <TextView
        android:id="@+id/settings_quiz_settings_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Quiz settings"
        android:textColor="@color/bgColor"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="39dp"
        android:backgroundTint="@color/greyBg"
        android:elevation="2dp"
        android:tint="@color/greyBg"
        app:srcCompat="@mipmap/ic_arrow_forward_black_24dp" />

    <TextView
        android:id="@+id/settings_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorWhite"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Privacy policy"
        android:textColor="@color/bgColor"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="167dp"
        android:backgroundTint="@color/greyBg"
        android:elevation="2dp"
        android:tint="@color/greyBg"
        app:srcCompat="@mipmap/ic_arrow_forward_black_24dp" />

    <TextView
        android:id="@+id/settings_sign_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:text="Sign out"
        android:textAlignment="center"
        android:textColor="@color/bgColor"
        android:textSize="18sp" />
</FrameLayout>
