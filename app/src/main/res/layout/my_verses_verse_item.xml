<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_verses_layout"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    android:layout_marginBottom="1dp"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="85dp"
        android:text="0%"
        android:textColor="@color/greyBgDark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/quiz_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="50dp"
        android:tag="empty"
        android:tint="@color/gold"
        app:srcCompat="@mipmap/ic_star_black_24dp" />

    <TextView
        android:id="@+id/my_verses_verse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Submit yourselves therefore..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/my_verses_verse_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="James 4:7"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/sampleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="16dp"
        android:padding="2dp"
        android:tint="@color/greyBgDark"
        app:srcCompat="@drawable/ic_drag_handle_black_24dp" />

</FrameLayout>