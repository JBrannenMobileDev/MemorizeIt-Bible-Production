<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nape.biblememory">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.PhoneUnlockActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_phone_unlock"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />

        <receiver android:name=".BroadcastReceivers.UnlockReceiver">
            <intent-filter
                android:enabled="true"
                android:exported="true">
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
            <intent-filter
                android:enabled="true"
                android:exported="true">
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Activities.QuizSettingsActivity"
            android:parentActivityName=".Activities.SettingsActivity" />
        <activity
            android:name=".Activities.SupportTheDeveloper"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.BibleVersionSettingsActivity"
            android:parentActivityName=".Activities.SettingsActivity"/>
        <activity
            android:name=".Activities.PrivacyPolicyActivity"
            android:parentActivityName=".Activities.SettingsActivity" />
        <activity
            android:name=".Activities.BootPrivacyPolicyActivity"
            android:parentActivityName=".Activities.BootActivity"/>
        <activity android:name=".Activities.BootActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SettingsActivity"
            android:parentActivityName=".Activities.MainActivity"></activity>
    </application>

</manifest>